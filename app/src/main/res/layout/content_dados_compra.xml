<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_home"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="720px">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDadosCompra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

    </ScrollView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <!-- Dando um espaço entre as palavras-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etnomeCompra"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icons8_user_16px"
                android:hint="Seu Nome Completo"
                android:selectAllOnFocus="true" />

            <EditText
                android:id="@+id/etcpfcompra"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icons8_user_16px"
                android:hint="Seu CPF"
                android:numeric="decimal"
                android:selectAllOnFocus="true"
                />

            <EditText
                android:id="@+id/etcelularCompra"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icons8_user_16px"
                android:hint="Seu Celular"
                android:phoneNumber="true"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <!-- Dando um espaço entre as palavras-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operadora"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/SpNomeCartao"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal">

            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo do Cartão"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"/>

            <RadioGroup
                android:id="@+id/RGTipoCartao"
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="20dp">
                <RadioButton
                    android:id="@+id/rbCredito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crédito"/>
                <RadioButton
                    android:id="@+id/rbDebito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Débito"/>

            </RadioGroup>

            <EditText
                android:id="@+id/etnumerocartao"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icons8_mastercard_credit_card_16px_1"
                android:hint="Numero Cartão"
                android:numeric="decimal"
                android:selectAllOnFocus="true"
                />

            <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
            <!-- Dando um espaço entre as palavras-->

            <EditText
                android:id="@+id/etCepCompra"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icons8_home_16px_3"
                android:hint="CEP"
                android:numeric="decimal"
                android:selectAllOnFocus="true" />

            <EditText
                android:id="@+id/etRuaComprar"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icons8_home_16px_3"
                android:hint="Rua"
                android:selectAllOnFocus="true" />

            <EditText
                android:id="@+id/etBairroComprar"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icons8_home_16px_3"
                android:hint="Bairro"
                android:selectAllOnFocus="true" />

            <EditText
                android:id="@+id/etNumCasa"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icons8_home_16px_3"
                android:hint="Número"
                android:numeric="decimal"
                android:selectAllOnFocus="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado:"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/SpUf"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                >

            </Spinner>

            <EditText
                android:id="@+id/etComplementoComprar"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icons8_home_16px_3"
                android:hint="Complemento"
                android:selectAllOnFocus="true" />


            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/llPrecoCompra"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preço total:"
                    android:layout_marginLeft="85dp"
                    android:textSize="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$"
                    android:textSize="25dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvprecototalcompra"
                    android:text="233"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"/>

            </LinearLayout>


            <Button
                android:id="@+id/btConfirmarCompra"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="95dp"
                android:text="Confirmar compra"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_rounded"
                android:layout_marginBottom="50dp"
                android:gravity="center_horizontal" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>